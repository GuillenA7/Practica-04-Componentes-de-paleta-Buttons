<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:padding="16dp">

    <EditText
        android:id="@+id/etCodigo"
        android:hint="Código"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/etMarca"
        android:hint="Marca"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/etModelo"
        android:hint="Modelo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/etCosto"
        android:hint="Costo"
        android:inputType="numberDecimal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <RadioGroup
        android:id="@+id/rgTalla"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/rbChica"
            android:text="Chica"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <RadioButton
            android:id="@+id/rbMediana"
            android:text="Mediana"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <RadioButton
            android:id="@+id/rbGrande"
            android:text="Grande"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RadioGroup>

    <com.google.android.material.chip.ChipGroup
        android:id="@+id/cgColores"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        xmlns:app="http://schemas.android.com/apk/res-auto">

        <com.google.android.material.chip.Chip
            android:id="@+id/chipNegro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:chipBackgroundColor="@color/black"
            android:checkable="true"
            android:layout_margin="1dp" />

        <com.google.android.material.chip.Chip
            android:id="@+id/chipBlanco"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:chipBackgroundColor="@color/white"
            android:checkable="true"
            android:layout_margin="4dp" />

        <com.google.android.material.chip.Chip
            android:id="@+id/chipAzul"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:chipBackgroundColor="@color/blue"
            android:checkable="true"
            android:layout_margin="4dp" />

        <com.google.android.material.chip.Chip
            android:id="@+id/chipRojo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:chipBackgroundColor="@color/red"
            android:checkable="true"
            android:layout_margin="4dp" />

        <com.google.android.material.chip.Chip
            android:id="@+id/chipNaranja"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:chipBackgroundColor="@color/orange"
            android:checkable="true"
            android:layout_margin="4dp" />
    </com.google.android.material.chip.ChipGroup>

    <!-- Botones en disposición horizontal -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="16dp">

        <ImageButton
            android:id="@+id/btnRegistrar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/registrar"
            android:background="@drawable/edit_text_background"
            android:contentDescription="Registrar" />

        <ImageButton
            android:id="@+id/btnBuscar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/buscar"
            android:background="@drawable/edit_text_background"
            android:contentDescription="Buscar" />

        <ImageButton
            android:id="@+id/btnEliminar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/eliminar"
            android:background="@drawable/edit_text_background"
            android:contentDescription="Eliminar" />

        <ImageButton
            android:id="@+id/btnLimpiar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/limpiar"
            android:background="@drawable/edit_text_background"
            android:contentDescription="Limpiar" />
    </LinearLayout>
</LinearLayout>